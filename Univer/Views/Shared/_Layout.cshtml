@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Практика8</title>
    <link rel="stylesheet" href="/css/round.css">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/ui.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/fa.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/responsive.css">
    <link rel="stylesheet" href="/lib/toastr.js/toastr.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" >
    
    @RenderSection("Styles", false)
   
</head>
<body class="aside-mini">

<b class="screen-overlay"></b>
<aside class="navbar-aside" id="offcanvas_aside">
<div class="aside-top">
  <a asp-controller="University" asp-action="Index" class="brand-wrap" style="color:black; text-decoration:none; align-self: end;">
      <h5>
            UniversitiesRating
     </h5>
  </a>
  <div>
    <button class="btn btn-icon btn-aside-minimize"> <i class="text-muted material-icons md-menu_open"></i> </button>
  </div>
</div> <!-- aside-top.// -->

<nav>
  <ul class="menu-aside">
    <li class="menu-item" asp-controller="University" asp-action="Index"> 
      <a class="menu-link" asp-controller="University" asp-action="Index"> <i class="icon material-icons md-school"></i>  
        <span class="text">Университеты</span> 
      </a> 
      
    </li>
   </ul>
   <hr>
   @if(Context.User.Identity.IsAuthenticated){
   <ul class="menu-aside">
    <div class="menu-link">  
       <span class="text">Для пользователей</span> 
    </div>
    <li class="menu-item" asp-controller="Account" asp-action="Profile"> 
      <a class="menu-link" asp-controller="Account" asp-action="Profile"> <i class="icon material-icons md-person"></i> 
        <span class="text">Мой профиль</span> 
      </a> 
    </li>
     <li class="menu-item" asp-controller="User" asp-action="Universities"> 
      <a class="menu-link" asp-controller="User" asp-action="Universities"> <i class="icon material-icons md-school"></i> 
        <span class="text">Мои университеты</span> 
      </a> 
    </li>
    <li class="menu-item" asp-controller="University" asp-action="Add">
        <a class="menu-link" asp-controller="University" asp-action="Add"> <i class="icon material-icons md-add_box"></i> 
        <span class="text">Добавить университет</span> 
        </a>  
    </li>
  </ul>
  <hr>
  }
  @if (Context.User.IsInRole("Admin"))
  {
    <ul class="menu-aside">
        <div class="menu-link">  
            <span class="text">Для администратора</span> 
        </div>
        <li class="menu-item" asp-controller="Admin" asp-action="Universities">
            <a class="menu-link" asp-controller="Admin" asp-action="Universities"> <i class="icon material-icons md-school"></i> 
                <span class="text">Список университетов</span> 
            </a>  
        </li>
        <li class="menu-item" asp-controller="Admin" asp-action="Users"> 
            <a class="menu-link" asp-controller="Admin" asp-action="Users"> <i class="icon material-icons md-people"></i> 
                <span class="text">Список пользователей</span> 
            </a> 
        </li>
    </ul>
    <hr>
  }
  <br>
  <br>
</nav>
</aside>


<main class="main-wrap ms-0">

<header class="main-header navbar">
    
	<div class="col-search">
	
	</div>
	<div class="col-nav">
        <partial name="_Account" />
  	</div>
</header>

<section class="content-main" >
    @RenderBody()
</section> <!-- content-main end// -->
</main>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/script.js?v=1.0"></script>
<script src="~/lib/toastr.js/toastr.min.js"></script>
<partial name="_ValidationScriptsPartial"/>
@await RenderSectionAsync("Scripts", required: false)
<script>
    if(localStorage.getItem("darkmode")){
        var body_el = document.body;
        body_el.className += 'dark';
    }
</script>

</html>
